// VS Code User Settings
// Features: Editor appearance, formatting, file handling, git integration, extensions
// Location: ~/.config/Code/User/settings.json
{
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 120,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "gutter",
  "editor.glyphMargin": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "welcomePage",
  "workbench.tree.indent": 20,
  "workbench.activityBar.location": "bottom",
  "workbench.panel.defaultLocation": "left",
  "workbench.sideBar.location": "left",
  "window.titleBarStyle": "custom",
  "window.layoutControl.enabled": true,
  "breadcrumbs.enabled": false,
  "workbench.statusBar.visible": true,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "extensions.autoUpdate": true,
  "update.mode": "manual",
  "telemetry.telemetryLevel": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "dotfiles.repository": "pbjorklund/dotfiles",
  "dotfiles.targetPath": "/home/vscode/dotfiles",
  "dotfiles.installCommand": "/home/vscode/dotfiles/dotfiles/install.sh",
  "git.enableSmartCommit": true,
  "chat.editing.confirmEditRequestRetry": false,
  "chat.editing.confirmEditRequestRemoval": false,
  "inlineChat.enableV2": true,
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show",
    "*"
  ],
  "github.copilot.nextEditSuggestions.enabled": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vim.useCtrlKeys": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "[nginx]": {
    "editor.defaultFormatter": "raynigon.nginx-formatter"
  },
  "chat.commandCenter.enabled": false,
  "inlineChat.holdToSpeech": false,
  "github.copilot.chat.agent.thinkingTool": true,
  "accessibility.signals.progress": {
    "sound": "off"
  },
  "accessibility.signalOptions.volume": 0,
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "markdown-preview-enhanced.codeBlockTheme": "atom-dark.css",
  "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
  "peacock.affectStatusBar": false,
