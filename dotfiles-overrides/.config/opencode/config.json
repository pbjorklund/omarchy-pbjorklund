{
  "$schema": "https://opencode.ai/config.json",
  "theme": "material",
  "autoupdate": true,
  "disabled_providers": [
    "google",
    "amazon-bedrock",
    "azure",
    "vercel",
    "openrouter",
    "huggingface",
    "groq",
    "xai",
    "deepseek",
    "zhipuai"
  ],
  "model": "github-copilot/claude-sonnet-4.5",
  "agent": {
    "build": {
      "description": "Full-featured development mode with all tools enabled",
      "mode": "primary",
      "temperature": 0.7,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "plan": {
      "description": "Analysis and planning mode without making changes",
      "mode": "primary",
      "temperature": 0.7,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "quick": {
      "description": "Quick LLM queries with no tools, context only",
      "mode": "primary",
      "temperature": 0.7,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "read": false,
        "grep": false,
        "glob": false,
        "list": false,
        "todowrite": false,
        "todoread": false
      }
    }
  }
}
